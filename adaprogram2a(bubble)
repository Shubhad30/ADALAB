#include<iostream>
#include<time.h>
using namespace std;
int main()
{
	int n,a[20],i,j,k,t,max;
	clock_t start,end;
	cout<<"\nEnter the limit:";
	cin>>n;
	cout<<"\nEnter "<<n<<" elements :";
	for(i=0;i<n;i++)
		cin>>a[i];
	cout<<"\nEnter the value for k:";
	cin>>k;	
	start=clock();
	{
	for(i=0;i<k;i++)
    {
		for(j=0;j<n-i-1;j++)
		{
			if(a[j]>a[j+1])
			{
			t=a[j];
			a[j]=a[j+1];
			a[j+1]=t;
			}
		}
	}
	}
	end=clock();
	double t1=((double)(end-start))/CLOCKS_PER_SEC;
	cout<<"\n"<<k<<"th smallest no:"<<a[k-1];
	/*for(i=0;i<n;i++)
		cout<<" "<<a[i];*/
	cout<<"\nTime is:"<<t1<<"\n";
	return 0;	
}
