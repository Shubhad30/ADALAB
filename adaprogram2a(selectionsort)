#include<iostream>
#include<time.h>
using namespace std;
int main()
{
	int n,a[20],i,j,k,t,min;
	clock_t start,end;
	cout<<"\nEnter the limit:";
	cin>>n;
	cout<<"\nEnter "<<n<<" elements :";
	for(i=0;i<n;i++)
		cin>>a[i];
	cout<<"\nEnter the value for k:";
	cin>>k;	
	start=clock();
	{
	for(i=0;i<k;i++)
    {
		min=i;
		for(j=i+1;j<n;j++)
		{
			if(a[j]<a[min])
				min=j;
		}
		if(min!=i)
		{
			t=a[i];
			a[i]=a[min];
			a[min]=t;
		}
	}
	}
	end=clock();
	double t1=((double)(end-start))/(double)CLOCKS_PER_SEC;
	cout<<"\n"<<k<<"th smallest no is:"<<a[k-1]<<"\n Time is:"<<t1<<"\n";
	return 0;	
}
