#include<iostream>
#include<time.h>
using namespace std;
int main()
{
	int n,a[20],i,j,k,t,max;
	clock_t start,end;
	cout<<"\nEnter the limit:";
	cin>>n;
	cout<<"\nEnter "<<n<<" elements :";
	for(i=0;i<n;i++)
		cin>>a[i];
	cout<<"\nEnter the value for k:";
	cin>>k;	
	start=clock();
	{
	for(i=0;i<k;i++)
    {
		max=i;
		for(j=i+1;j<n;j++)
		{
			if(a[j]>a[max])
				max=j;
		}
		if(max!=i)
		{
			t=a[i];
			a[i]=a[max];
			a[max]=t;
		}
	}
	}
	end=clock();
	double t1=((double)(end-start))/CLOCKS_PER_SEC;
	cout<<"\n"<<k<<" smallest nos:";
	for(i=0;i<k;i++)
		cout<<" "<<a[i];
	cout<<"\nTime is:"<<t1<<"\n";
	return 0;	
}
